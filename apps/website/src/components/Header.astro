---
const navItems = [
  { label: 'Features', href: '#features' },
  { label: 'Pricing', href: '#pricing' },
  { label: 'FAQ', href: '#faq' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-lg border-b border-gray-100">
  <nav class="container-wide mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <svg class="w-8 h-8 text-primary-600" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="32" height="32" rx="8" fill="currentColor" />
          <path d="M8 10h16M8 16h12M8 22h8" stroke="white" stroke-width="2.5" stroke-linecap="round" />
        </svg>
        <span class="text-xl font-bold text-gray-900">WriteForge</span>
      </a>

      <!-- Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-gray-600 hover:text-gray-900 font-medium transition-colors"
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- CTA -->
      <div class="flex items-center gap-4">
        <a href="#download" class="btn btn-primary">
          Download Free
        </a>
      </div>
    </div>
  </nav>
</header>
